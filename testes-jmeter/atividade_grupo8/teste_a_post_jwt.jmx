        <HTTPSamplerProxy guiclass="HttpTestSampleGui" testclass="HTTPSamplerProxy" testname="POST - Create Order (with JWT)" enabled="true">
          <boolProp name="HTTPSampler.postBodyRaw">true</boolProp>
